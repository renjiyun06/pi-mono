filters:
  and:
    - file.hasTag("note")

formulas:
  last_updated: 'file.mtime.relative()'

properties:
  description:
    displayName: "Description"
  priority:
    displayName: "Priority"
  formula.last_updated:
    displayName: "Updated"

views:
  - type: table
    name: "All Notes"
    order:
      - file.name
      - description
      - priority
      - file.tags
      - formula.last_updated
