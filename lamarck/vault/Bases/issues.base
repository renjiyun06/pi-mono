filters:
  and:
    - file.hasTag("issue")

formulas:
  last_updated: 'file.mtime.relative()'

properties:
  status:
    displayName: "Status"
  description:
    displayName: "Description"
  formula.last_updated:
    displayName: "Updated"

views:
  - type: table
    name: "Open Issues"
    filters:
      and:
        - 'status == "open"'
    order:
      - file.name
      - description
      - status
      - formula.last_updated

  - type: table
    name: "All Issues"
    order:
      - file.name
      - description
      - status
      - formula.last_updated
    groupBy:
      property: status
      direction: ASC
